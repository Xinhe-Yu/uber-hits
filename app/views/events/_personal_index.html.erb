<% img_paths = [
"https://partyanimals.com/media/screenshots/thumbnails/media-image-small-6.jpg",
"https://partyanimals.com/media/screenshots/thumbnails/media-image-small-7.jpg",
"https://partyanimals.com/media/screenshots/thumbnails/media-image-small-9.jpg"
] %>

<h2>My Events</h2>
<% if events.empty? %>
There isn't any reservation yet, but we can
<%= link_to "click here to find the ideal fighter!", fighters_path, class:"btn btn-primary" %>
<% else %>
<div class="row">
  <% events.each do |event| %>
    <%= render "events/card", event: event, visitor: "user" %>
<% end %>
</div>
<% end %>
<hr class="hr-short">

<% if fighter_events && fighter_events[0] %>
  <div class="row">
    <h2>Invitations Waiting for your answer!</h2>
    <% fighter_events[0].each do |event| %>
      <%= render "events/card", event: event, visitor: "fighter" %>
    <% end %>
  </div>
<% end %>

<%= simple_form_for([fighter, event], html: {
                      data: {
                        controller: 'datepicker'
                      }
                    }) do |f| %>
  <%= f.input :title, label: "Fight title" %>
  <%= f.input :fight_type, collection: %w[programmed ambush] %>
  <%= f.input :place %>
  <%= f.input :start_time,
              as: :string,
              input_html: {
                data: {
                  datepicker_target: 'startTimeInput',
                }
              } %>
  <%= f.input :duration, as: :integer %>
  <%# <%= f.input :end_time,
              as: :string,
              input_html: {
                data: {
                  datepicker_target: 'endTimeInput',
                }
              } %>
  <%= f.input :target %>
  <%= f.input :description %>
  <%= f.input :is_private, label: "Private fight" %>
  <%= f.button :submit, "Book fight",
                class:"btn btn-danger text-light me-3",
                style:"width:100%" %>
<% end %>

<%= simple_form_for([fighter, event], html: {
                      data: {
                        controller: 'datepicker',
                        class: 'form-padding'
                      }
                    }) do |f| %>
<div class="row">
  <div class="col-md-6">
    <p>Fight title</p>
    <%= f.input :title, label: false %>
  </div>
  <div class="col-md-6">
    <p>Fight type</p>
    <%= f.input :fight_type,
                collection: %w[programmed ambush],
                label: false %>
  </div>
</div>
<div class="row">
  <div class="col-md-6">
    <%= f.input :place %>
  </div>
  <div class="col-md-6">
    <%= f.input :target %>
  </div>
</div>
<div class="row">
  <div class="col-md-6">
    <p>Start time</p>
    <%= f.input :start_time,
                as: :string,
                label: false,
                input_html: {
                  data: {
                    datepicker_target: 'startTimeInput',
                  }
                } %>
  </div>
  <div class="col-md-6">
    <p>Duration</p>
    <%# <%= f.label :duration,
                required: true,
                label:false,
                class: 'form-label' %>
    <div class="input-group">
      <%= f.input_field :duration,
                  as: :integer,
                  min: 1,
                  max: 6,
                  placeholder: "1",
                  class:'form-control' %>
      <div class="input-group-append">
        <span class="input-group-text">hours</span>
      </div>
    </div>
  </div>
</div>
<div class="description-container">
  <%= f.input :description,
              as: :text,
              :input_html => { 'rows' => 3 } %>
</div>
  <i>Feeling like fighting incognito or shining in the spotlight? Private or public, the choice is yours!</i>
  <%= f.input :is_private,
              label: "Private fight",
              style: "margin-bottom:10px"
   %>
  <div class="button-container">
    <%= f.button :submit, "Book fight",
                  class:"btn-flat" %>
  </div>
<% end %>

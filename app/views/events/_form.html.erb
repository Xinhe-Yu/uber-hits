<%= simple_form_for([fighter, event]) do |f| %>
  <%= f.input :title, label: "Event title" %>
  <%= f.input :fight_type %>
  <%= f.input :place %>
  <%= f.input :start_time %>
  <%= f.input :end_time %>
  <%= f.input :target %>
  <%= f.input :description %>
  <%= f.button :submit,
                class:"btn btn-danger text-light me-3",
                style:"width:100%" %>
<% end %>

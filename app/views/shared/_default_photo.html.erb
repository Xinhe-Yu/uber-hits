<%# accept variables:
  item,
  path/ (for img's path),
  class_name (empty string if no specific class),
  alt %>
<% style = style || "" %>
<% class_name = class_name || "" %>
<% default_img = default_img || "" %>
<% if !default_img.empty? %>
    <%= image_tag default_img, class: class_name, alt: alt, style: style %>
<% elsif item.image_path %>
    <%= image_tag "#{path[0]}#{item.image_path}#{path[1]}", class: class_name, alt: alt, style: style %>
<% else %>
  <%= image_tag "#{path[0]}9#{path[1]}", class: class_name, alt: alt, style: style %>
<% end %>

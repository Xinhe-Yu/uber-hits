
<%= form_with url: fighters_path, method: :get, html: {class: "row", style:"width:100%"} do %>
  <div class="col-xl-3">
    <%= text_field_tag :name,
    params[:name],
    class: "form-control",
    placeholder: "Find your fighter..." %>
  </div>

  <div class="col-xl-3">
    <%= date_field_tag :date,
    params[:date],
    class: "form-control",
    value: Date.today,
    min: Date.today,
    max: 14.days.from_now.to_date %>
  </div>

  <div class="col-xl-3">
    <div class="input-group">
      <%= number_field_tag :duration,
      params[:duration],
      min: 1, max: 6,
      placeholder: 1,
      class: "form-control" %>
      <div class="input-group-append">
        <span class="input-group-text">hours</span>
      </div>
    </div>
  </div>

  <div class="col-xl-3">
    <%= submit_tag "Search", name: "", class: "btn btn-primary" %>
  </div>
<% end %>

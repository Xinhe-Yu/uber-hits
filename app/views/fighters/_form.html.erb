<%= simple_form_for(fighter) do |f| %>
  <%= f.input :user_id, as: :hidden, input_html: { value: current_user.id } %>
  <%= f.input :first_name, input_html: {value: current_user.fighter ? fighter.first_name : current_user.first_name} %>
  <%= f.input :last_name, input_html: {value: current_user.fighter ? fighter.last_name : current_user.last_name} %>
  <%= f.input :nickname %>
  <%= f.input :birth_date, as: :date, html5: true %>
  <%= f.input :height, label: "Height (cm)" %>
  <%= f.input :weight, label: "Weight (kg)" %>
  <%= f.input :fight_style %>
  <%= f.input :description, placeholder: "Wraaak..." %>
  <div class="form-actions">
    <div class="row justify-content-around pb-3">
      <div class="col-md-5">
        <%= f.button :submit, label: btn_text,
                      class:"btn btn-danger text-light me-3",
                      style:"width:100%" %>
      </div>
      <div class="col-md-5">
        <% if action_name == "new" %>
          <%= link_to "Go Back", dashboard_path,
                      class:"btn btn-secondary",
                      style:"width:100%" %>
        <% else %>
          <%= link_to 'Delete Fighter\'s profile', fighter_path(current_user),
                      data: {turbo_method: :delete, turbo_confirm: "sure ?"},
                      class:"btn btn-outline-secondary" %>
        <% end %>
      </div>
    </div>
  </div>
<% end %>
